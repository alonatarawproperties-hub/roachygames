{
  "expo": {
    "name": "CryptoCreatures",
    "slug": "crypto-creatures",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "cryptocreatures",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.cryptocreatures.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "CryptoCreatures needs your location to find creatures near you.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "CryptoCreatures needs your location to spawn creatures around you even when the app is in the background."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#1A1A2E",
        "foregroundImage": "./assets/images/icon.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.cryptocreatures.app",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#1A1A2E",
          "dark": {
            "backgroundColor": "#1A1A2E"
          }
        }
      ],
      "expo-web-browser",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow CryptoCreatures to use your location to find creatures near you."
        }
      ]
    ],
    "experiments": {
      "reactCompiler": true
    }
  }
}
